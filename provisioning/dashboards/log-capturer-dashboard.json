        "h": 8,
        "w": 6,
        "x": 18,
        "y": 0
      },
      "options": {
        "colorMode": "thresholds",
        "graphMode": "area",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        },
        "orientation": "auto",
        "textMode": "auto"
      },
      "pluginVersion": "10.1.1",
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "log_capturer_task_health",
          "legendFormat": "{{task_name}}",
          "refId": "A"
        }
      ],
      "thresholds": [
        {
          "color": "red",
          "value": 0
        },
        {
          "color": "green",
          "value": 0.9
        }
      ]
    },
    {
