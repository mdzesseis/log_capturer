    {
      "id": 1,
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "title": "Logs Processed per Second",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(rate(log_capturer_lines_processed_total[5m])) by (source_type, source_id)",
          "legendFormat": "{{source_type}}/{{source_id}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "title": "Sink Queue Size",
      "type": "gauge",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 12,
        "y": 0
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        },
        "orientation": "auto",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "targets": [
        {
          "expr": "log_capturer_sink_queue_size",
          "legendFormat": "{{sink_name}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 10,
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
